LOG=evince
TEX=tl-rapport

FIGSRC = $(wildcard fig/2-mot/circle/*.ipe )
FIGOBJ = $(FIGSRC:.ipe=.pdf)
 
all: fig paper show  
 
fig: $(FIGOBJ)

fig/2-mot/circle/%.pdf: fig/2-mot/circle/%.ipe
	ipetoipe -pdf $<


paper:
	pdflatex $(TEX).tex
	#bibtex $(TEX)
	#pdflatex $(TEX).tex
	pdflatex $(TEX).tex

show:
	$(LOG) $(TEX).pdf

proper:
	rm -f *.log *.toc *.aux *.nav *.snm *.out *.bbl *.blg *.dvi
	rm -f *.backup *~
	

clean:	proper
	rm -f $(TEX).ps $(TEX).pdf
